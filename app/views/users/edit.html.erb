<h3 class="subTitle">予定の編集</h3>
 
<%= render "shared/error", obj: @user %>

<div class="container">
  <%= form_with model: @user do |f| %>
    <table>
      <tr>
        <th class="formSize"><%= f.label :title ,"タイトル" %></th>
        <td><%= f.text_field :title ,class: "formText"%></td>
      </tr>
      <tr>
        <th class="formSize"><%= f.label :start ,"開始日" %></th>
        <td><%= f.date_field :start ,class: "formDate"%></td>
      </tr>
      <tr>
        <th class="formSize"><%= f.label :stop ,"終了日" %></th>
        <td><%= f.date_field :stop ,class: "formDate"%></td>
      </tr>
      <tr>
        <th class="formSize"><%= f.label :syuuzitu ,"終日" %></th>
        <td><%= f.check_box :syuuzitu ,class: "formCheck" %><span>終日の場合はチェックを入れます</span></td>
      </tr>
      <tr>
        <th class="formSize"><%= f.label :introduction ,"スケジュールメモ" %></th>
        <td><%= f.text_area :introduction ,class: "formText formMemo"%></td>
      </tr>
    </table>
 
    <p class="right">
      <span class="link"><%= link_to "キャンセル", :users ,class: "btnColor cancel"%></span>
      <span><%= f.submit "保存する" ,class: "btn btnColor"%></span>
    </p>
  <% end %>
</div>